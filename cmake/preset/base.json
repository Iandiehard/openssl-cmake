            "cacheVariables": {
                "CMAKE_OSX_SYSROOT": "iphonesimulator",
                "OPENSSL_TEST": false
            }
        },
        {
            "name": "target-linux-aarch64",
            "hidden": true,
            "cacheVariables": {
                "OPENSSL_TARGET_PLATFORM": "linux-aarch64"
            }
        },
        {
            "name": "target-linux-x86_64",
            "hidden": true,
            "cacheVariables": {
                "OPENSSL_TARGET_PLATFORM": "linux-x86_64"
            }
        },
        {
