{
    "version": 5,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cmakeExecutable": "cmake",
            "cacheVariables": {
                "CPM_SOURCE_CACHE": "${sourceDir}/build/.cache",
                "OPENSSL_INSTALL": true,
                "OPENSSL_TEST": true
            }
        },
        {
            "name": "host-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "host-macos",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "host-windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "host-not-windows",
            "hidden": true,
            "condition": {
                "type": "notEquals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "target-android",
            "hidden": true,
            "toolchainFile": "$env{ANDROID_NDK}/build/cmake/android.toolchain.cmake",
            "cacheVariables": {
                "ANDROID_NDK": "$env{ANDROID_NDK}",
                "ANDROID_PLATFORM": "android-33",
                "OPENSSL_CONFIGURE_OPTIONS": "--openssldir=/system/etc/security/cacerts",
                "OPENSSL_PATCH": "${sourceDir}/patch/android.patch"
            }
        },
        {
            "name": "target-android-arm",
            "hidden": true,
            "inherits": "target-android",
            "cacheVariables": {
                "ANDROID_ABI": "armeabi-v7a"
            }
        },
        {
            "name": "target-android-arm64",
            "hidden": true,
            "inherits": "target-android",
            "cacheVariables": {
                "ANDROID_ABI": "arm64-v8a"
            }
        },
        {
            "name": "target-android-x86",
            "hidden": true,
            "inherits": "target-android",
            "cacheVariables": {
                "ANDROID_ABI": "x86"
            }
        },
        {
            "name": "target-android-x86_64",
            "hidden": true,
